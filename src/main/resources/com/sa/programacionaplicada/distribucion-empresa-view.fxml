<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sa.programacionaplicada.procesamientoDatos.presentacion.DistribucionEmpresaController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <bottom>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="totalDevicesLabel" style="-fx-border-color: #000000; -fx-border-radius: 4;" text="Total Equipos" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font></Label>
                  <Label fx:id="averageDevicesLabel" style="-fx-border-color: #000000; -fx-border-radius: 4;" text="Promedio Equipos División" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font></Label>
                  <Label fx:id="maxDevicesDivisionLabel" style="-fx-border-color: #000000; -fx-border-radius: 4;" text="División con más Equipos" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font></Label>
                  <Label fx:id="minDevicesDivisionLabel" style="-fx-border-color: #000000; -fx-border-radius: 4;" text="División con menos Equipos" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font></Label>
               </children>
            </HBox>
         </bottom>
         <center>
            <TableView fx:id="presentationTable" disable="true" editable="true" BorderPane.alignment="CENTER">
              <columns>
                  <TableColumn fx:id="divisionIdColumn" editable="false" prefWidth="75.0" text="División" />
                <TableColumn fx:id="nameDivisionColumn" prefWidth="75.0" text="Nombre" />
                <TableColumn fx:id="devicesDivisionColumn" prefWidth="75.0" text="Equipos" />
                  <TableColumn fx:id="operatorsDivisionColumn" editable="false" prefWidth="75.0" text="Operarios" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
         <top>
            <Label text="Distribución Equipos de la Empresa" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
               <BorderPane.margin>
                  <Insets top="5.0" />
               </BorderPane.margin>
            </Label>
         </top>
         <left>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="80.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="doDistributionButton" mnemonicParsing="false" text="Realizar distribución" textAlignment="CENTER" wrapText="true">
                     <VBox.margin>
                        <Insets top="2.0" />
                     </VBox.margin>
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="quitButton" mnemonicParsing="false" text="Salir">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </children>
</AnchorPane>
